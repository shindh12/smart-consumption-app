<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:background="@color/app_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivActionBarBack"
            android:layout_width="@dimen/action_bar_icon_width"
            android:layout_height="@dimen/action_bar_icon_height"
            android:layout_marginStart="@dimen/action_bar_margin_start"
            android:src="@drawable/ic_actionbar_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivActionBarAdd"
            android:layout_width="@dimen/action_bar_icon_width"
            android:layout_height="@dimen/action_bar_icon_height"
            android:layout_marginStart="@dimen/action_bar_margin_start"
            android:layout_toLeftOf="@id/ivActionBarNotification"
            android:src="@drawable/ic_actionbar_add" />

        <ImageView
            android:id="@+id/ivActionBarNotification"
            android:layout_width="@dimen/action_bar_icon_width"
            android:layout_height="@dimen/action_bar_icon_height"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/action_bar_margin_start"
            android:src="@drawable/ic_actionbar_notification" />
    </RelativeLayout>
</layout>